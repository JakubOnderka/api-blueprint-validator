#!/usr/bin/env node
var yargs = require('yargs')
      .usage('Usage: $0 apiary.apib ')
      .boolean(['validate-requests', 'validate-responses', 'require-name'])
      .default('validate-requests', true)
      .default('validate-responses', true),
    argv = yargs.argv;

if (argv.help) {
  console.log(yargs.help());
  return;
}

if (argv._[0] === undefined) {
  console.error("Error: Must specify path to blueprint file.\n");
  console.log(yargs.help());
  return;
}

var validator = require('../src/validator');
validator(argv._[0], argv.validateRequests, argv.validateResponses, argv.requireName);
